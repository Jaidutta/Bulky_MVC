@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger fw-bolder fs-4"></div>
        <div class="mb-3 p-1">
            <label class="p-0">Category Name</label>
            <input asp-for="Name" class="form-control" />
            
            @* asp-for tells the controller which field this input is for *@
            @* If we have asp-for there is no need to define type *@
            @* we have the same thing for label and the spacing or text can be changed with Data Annotation *@

            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">

            @* <label class="p-0" asp-for="DisplayOrder"></label>  example shown for asp-for in label*@
            <label class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            
            @* asp-for tells the controller which field this input is for *@
            @* If we have asp-for there is no need to define type *@
            @* we have the same thing for label and the spacing or text can be changed with Data Annotation *@

            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>